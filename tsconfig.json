{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017", "dom"],
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "jsx": "react",
    "typeRoots": ["./src/types"]
  },
  "exclude": [
    "node_modules"
  ],
}
